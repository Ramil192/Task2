doctype html
html
  head
    script(src="https://code.jquery.com/jquery-1.12.4.min.js")
    script(src="https://code.jquery.com/ui/1.12.1/jquery-ui.js")
    meta(charset = 'utf-8')
    meta(name='viewport' content="initial-scale=1.0, width=device-width")
    title Toxin Hotel
    link(href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet")
    link(rel="apple-touch-icon" sizes="180x180" href="./favicons/apple-touch-icon.png")
    link(rel="icon" type="image/png" sizes="32x32" href="./favicons/favicon-32x32.png")
    link(rel="icon" type="image/png" sizes="16x16" href="./favicons/favicon-16x16.png")
    link(rel="manifest" href="./favicons/site.webmanifest")
    link(rel="mask-icon" href="./favicons/safari-pinned-tab.svg" color="#5bbad5")
    meta(name="msapplication-TileColor" content="#da532c")
    meta(name="theme-color" content="#ffffff")
  body
    section.form-elements
      div.form-elements__row
        div.form-elements__row-input
          div.form-elements__row-input-item
            div.form-elements__row-input-text
              span.form-elements__row-input-title Text Field
              span.form-elements__row-input-subTitle Default
            include ../../../components/input-form/input-form.pug
            +input-form()
          div.form-elements__row-input-item
            div.form-elements__row-input-text
              span.form-elements__row-input-title Text Field
              span.form-elements__row-input-subTitle Hover&nbsp;/&nbsp;Focus
            include ../../../components/input-form/input-form.pug
            +input-form({isActive : true, value : 'This is pretty awesome'})
          div.form-elements__row-input-item
            include ../../../components/drop-down/drop-down.pug
            +drop-down({ 
              title : 'drop-down',
              list : [
                "взрослые",
                "дети",
                "младенцы",
              ], 
            })            
          div.form-elements__row-input-item
            div.form-elements__row-input-text
            include ../../../components/input-form-mask/input-form-mask.pug
            +input-form-mask('masked text field')
          div.form-elements__row-input-item
            div.form-elements__row-input-text
              span.form-elements__row-input-title date drop-down
            include ../../../components/data-drop-down/data-drop-down.pug
            +data-drop-down-filter()
          div.form-elements__row-input-item
            include ../../../components/data-drop-down/data-drop-down.pug
            +data-drop-down-filter('filter date drop-down')
          div.form-elements__row-input-item
            div.form-elements__row-input-text
              span.form-elements__row-input-title subscription text field
            include ../../../components/input-form/input-form.pug
            +input-form({isForm : true})
          div.form-elements__row-input-item
            div.form-elements__row-input-text
              span.form-elements__row-input-title drop-down
              span.form-elements__row-input-subTitle Default
            include ../../../components/drop-down-bed/drop-down-bed.pug
            +drop-down-bed()
          div.form-elements__row-input-item
            div.form-elements__row-input-text
              span.form-elements__row-input-title drop-down
              span.form-elements__row-input-subTitle expanded
            include ../../../components/drop-down-bed/drop-down-bed.pug
            +drop-down-bed({isOpen : true})
          div.form-elements__row-input-item
            include ../../../components/checkbox-list/checkbox-list.pug
            +checkbox-list()
          div.form-elements__row-input-item
            +checkbox-list({show:'checkbox-list__items_show',
              rotate:'checkbox-list__titleBtn_rotate',
              title:'',
              items : [
                {text:'Завтрак',flag:false},
                {text:'Письменный стол',flag:false},
                {text:'Стул для кормления',flag:true},
                {text:'Кроватка',flag:true},
                {text:'Телевизор',flag:false},
                {text:'Шампунь',flag:false},
              ]})
          div.form-elements__row-input-item
            include ../../../components/text-list/text-list.pug
            +comfortList()
        div.form-elements__row-checkbox
          div.form-elements__row-checkbox-item
            +checkbox-list({
              isList:false,
              title:'Checkbox Buttons',
              items : [
                {text:'Можно курить',flag:false},
                {text:'Можно с питомцами',flag:true},
                {text:'Можно пригласить гостей</br> (до 10 человек)',flag:true},
              ]})
          div.form-elements__row-checkbox-item
            include ../../../components/radio-buttons/radio-buttons.pug
            +radio-buttons({title : 'Radio Buttons'})
          div.form-elements__row-checkbox-item
            div.form-elements__row-checkbox-item-title Toggle
            include ../../../components/toggle/toggle.pug
            +toggle('Получать спецпредложения',true)
            +toggle('Получать спецпредложения',false)
          div.form-elements__row-checkbox-item
            div.form-elements__row-checkbox-item-title like button
            include ../../../components/like-button/like-button.pug
            +like-button({likeCount : 2 })
          div.form-elements__row-checkbox-item
            div.form-elements__row-checkbox-item-title rate button
            include ../../../components/rate-btn/rate-btn.pug
            +rate-btn('4')
          div.form-elements__row-checkbox-item
            include ../../../components/drop-down/drop-down.pug
            +drop-down({
              isOpen : true, 
              title : 'drop-down11',
              list : [
                "взрослые",
                "дети",
                "младенцы",
              ], 
            }) 
          div.form-elements__row-checkbox-item
            include ../../../components/rich-checkbox-btn/rich-checkbox-btn.pug
            +rich-checkbox-btn({title:'RICH CHECKBOX BUTTONS'})
          div.form-elements__row-checkbox-item
            include ../../../components/commentary/commentary.pug
            +commentary('Мурад Сарафанов','5 дней назад','Великолепный матрас на кровати в основной спальне! А пуфик вообще потрясающий. И стены, действительно, шумоподавляющие. Выкрикивал комплименты повару — никто не жаловался из соседей.','./img/man.png')
        div.form-elements__row-btn
          div.form-elements__row-btn-item
            include ../../../components/range-slider/range-slider.pug
            +range-slider('Range Slider')
          div.form-elements__row-btn-item
            div.form-elements__row-btn-item-title buttons
            include ../../../components/buttons/buttons.pug
            +buttons()
          div.form-elements__row-btn-item
            include ../../../components/buttons/buttons.pug
            +buttons({btnSwitch:'withBorder'})
          div.form-elements__row-btn-item
            include ../../../components/buttons/buttons.pug
            +buttons({btnSwitch:'justBtn'})
          div.form-elements__row-btn-item
            include ../../../components/buttons/buttons.pug
            +buttons({btnSwitch:'btn-Form',text:'перейти к оплате'})
          div.form-elements__row-btn-item
            div.form-elements__row-btn-item-title pagination
            include ../../../components/pagination/pagination.pug
            +pagination()
          div.form-elements__row-btn-item
            include ../../../components/drop-down/drop-down.pug
            +drop-down({
              isOpen : true,
              title : 'drop-down',
              list : [
                "взрослые",
                "дети",
                "младенцы",
              ], 
            }) 
          div.form-elements__row-btn-item
            div.form-elements__row-btn-item-title bullet list
            include ../../../components/bullet-list/bullet-list.pug
            +bullet-list('') 
