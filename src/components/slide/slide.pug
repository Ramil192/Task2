include ../price-and-number/price-and-number.pug
include ../rate-button/rate-button.pug

mixin slide(options = {})
  -
    const {
      img = ['./img/left-big.png',
        './img/photo/image-2.png',
        './img/photo/image-3.png',
        './img/photo/image-4.png'],
      number = '888',
      pay = '9 990â‚½',
      rating = { 
        blockNumber : 0,
        checkedStarIndex : 0,
      },
      review = '145',
    } = options;

  div.slick
    div.slick_slide 
      -for(let i=0;i<img.length;i++)
        div.slick_slide__item
          img(class='slick_slide__img' src=img[i], alt="")
          
    div.slick_slide__footer
      div.slick_slide__footer-text
        +price-and-number(number,pay)
      div.slick_slide__footer-rating
        +rate-button(rating)
        a(href='room-details.html').slick_slide__footer-review=review