include ../buttons/buttons.pug

mixin headItem(text,className,flag)
  li(class='head__link '+className)
    a=text
    if(flag)
      button.head__link_downBtn 

mixin head(name)
  - var className=name ? 'head__item_name':''

  header.head
    div(class='head__item '+className)
      ul.head__list
        +headItem('О нас','head__link_bold')
        +headItem('Услуги','',true)
        +headItem('Вакансии','')
        +headItem('Новости','')
        +headItem('Соглашения','',true)
        if (name)
          span.head__link.head__link_name=name         
        else
          li.head__link
            +btnWithBorder('войти','btnWithBorder_head')
          li.head__link
            +btnForm('зарегистрироваться','btnForm_head') 