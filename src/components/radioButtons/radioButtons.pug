mixin radioBtnItem(name,isFlag)
  label.radioButtons__radio
        input(type="radio" name='gender' class='radioButtons__radio-input' checked=isFlag)
        span.radioButtons__radio-name=name
        
mixin radioButtons(title)
  section.radioButtons
    div.radioButtons__title=title
    div.radioButtons__items
      +radioBtnItem('Мужчина',true)
      +radioBtnItem('Женщина',false)  
