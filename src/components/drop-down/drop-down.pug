mixin drop-down(options={})
  - 
    const {
      className = '', 
      title = 'drop-down',
      list = [
        "взрослые",
        "дети",
        "младенцы",
      ], 
    } = options;

  section.drop-down
    div.drop-down__title=title 
    div.drop-down__header
      button.drop-down__titleBtn Сколько гостей
    div(class='drop-down__body ' + className)
      -for(let item of list )
        div.drop-down__bodyItem
          div.drop-down__bodyItem-title=item
          div.drop-down__bodyItem-btns 
            button.drop-down__bodyItem-btns-inc -
            div.drop-down__bodyItem-btns-count 0
            button.drop-down__bodyItem-btns-dec +
      div.drop-down__bodyItem
        div.drop-down__bodyItem-btns-control 
            button.drop-down__bodyItem-btns-control-clean очистить
            button.drop-down__bodyItem-btns-control-ok применить